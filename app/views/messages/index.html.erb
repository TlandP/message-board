<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <%= f.label :name, "名前", class: 'col-sm-12 control-label' %>
  <%= f.text_field :name, class: 'col-sm-12 form-control' %>

  <%= f.label :body, "内容", class: 'col-sm-12 control-label' %>
  <%= f.text_area :body, class: 'col-sm-12 form-control' %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>

